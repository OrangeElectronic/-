<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag.Frag_SettingPager_Update">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="43dp"
                android:src="@mipmap/img_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Update_Name_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginStart="42dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/Update_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    android:text="O-Genius Lite"
                    android:textSize="17sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="43dp"
                android:src="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Update_Versoin_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginStart="42dp"
                    android:gravity="center"
                    android:text="Versoin"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/Update_Versoin"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="43dp"
                    android:gravity="center"
                    android:text="1.0"
                    android:textSize="17sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="43dp"
                android:src="@android:color/darker_gray" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>