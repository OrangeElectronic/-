<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag.Frag_Function_Check_Sensor_Read">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/Read_MMY_Title"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/title_black"
        android:gravity="center"
        android:text="hello_blank_fragment"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@id/Read_MMY_Title"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Not all of the OE sensor contains the temperature,Battery and Voltage status"
        android:textColor="@color/title_color"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/two_button"
        android:layout_below="@id/textView27">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/ID_text"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="@string/app_id"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="22dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="22dp"
                android:background="@color/check_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/psi_text"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="psi:"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/psi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="22dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="22dp"
                android:background="@color/check_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/Co_text"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="Â°C:"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/Co"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="22dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="22dp"
                android:background="@color/check_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/BAT_text"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="BAT:"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/BAT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="22dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="22dp"
                android:background="@color/check_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/Voltage_text"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="@string/app_voltage"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/Voltage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="22dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/check_text_color"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
