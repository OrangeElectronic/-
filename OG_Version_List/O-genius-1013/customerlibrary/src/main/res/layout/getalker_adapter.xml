<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"

        fresco:roundAsCircle="true"
        fresco:viewAspectRatio="1" />
    <TextView
        android:text="林志嘉"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/pick" android:layout_toEndOf="@id/head"
        android:singleLine="true" android:layout_centerVertical="true" android:translationY="-10dp"
        android:textSize="16sp" android:textColor="@color/Black" android:layout_marginLeft="5dp"/>
    <TextView
        android:text="我覺得沒有必要"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/tit" android:layout_toEndOf="@id/head"
        android:layout_centerVertical="true" android:translationY="10dp" android:singleLine="true"
        android:ellipsize="end" android:layout_marginLeft="5dp"/>
</RelativeLayout>
