<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/strokeblack"
            android:orientation="vertical"
            android:padding="1dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/cornertop">

            <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="AM:10:30"
                    android:textColor="@android:color/white"
                    android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#DAEEFB"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Kunde"
                    android:textColor="#9C003856"
                    android:textSize="17sp" />

            <View
                    android:id="@+id/view26"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Karl Marx"
                    android:textColor="#9C003856"
                    android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="#DAEEFB"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Kennzeichen"
                    android:textColor="#9C003856"
                    android:textSize="17sp" />

            <View
                    android:id="@+id/view32"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            <TextView
                    android:id="@+id/plate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="A-XC 123"
                    android:textColor="#9C003856"
                    android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/cornerbtb"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textView37"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Lagerort"
                    android:textColor="#9C003856"
                    android:textSize="17sp" />

            <View
                    android:id="@+id/view34"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

            <TextView
                    android:id="@+id/store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="C-001 / Container1"
                    android:textColor="#9C003856"
                    android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            android:layout_alignEnd="@id/linear">

        <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="jz.457"
                android:textColor="@color/check_text_color"
                android:textSize="20sp" />
    </RelativeLayout>

    <View
            android:id="@+id/view35"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/f"
            android:layout_margin="10dp"
            android:background="@color/check_text_color"
            android:padding="10dp" />
</RelativeLayout>