<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp" android:layout_centerInParent="true"
            android:background="@drawable/cornerwhite" android:layout_marginStart="30dp">

        <TextView
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/re"
                android:layout_below="@id/textView16"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/Do_you_want_to_reselect_vehicle"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@android:color/darker_gray"
                android:layout_above="@id/re"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:layout_alignParentBottom="true" android:id="@+id/re">
            <TextView
                    android:text="@string/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/ok" android:layout_weight="1"
                    android:gravity="center" android:textColor="@color/colorPrimary" android:onClick="onclick"
                    android:textSize="20sp"/>
            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent" app:srcCompat="@android:color/darker_gray"
                    android:id="@+id/imageView14"/>
            <TextView
                    android:text="@string/Yes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/yes" android:layout_weight="1"
                    android:gravity="center" android:onClick="onclick" android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>