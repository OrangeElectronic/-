<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_unite_bg">

    <TextView
            android:id="@+id/text_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:minLines="2"
            android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:textColor="#FFFFFF"
            android:textSize="30sp" android:translationY="-4dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/text_item" android:background="@color/white"/>
</RelativeLayout>