<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qs404demo"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.qs.wiget.App"
        android:allowBackup="true"
        android:icon="@drawable/pos_ico"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.qs.demo.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qs.demo.UpdateActivity"
            android:label="Update"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qs.demo.ScanActivity"
            android:label="Scan"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qs.demo.SendCmdActivity"
            android:label="Send CMD"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qs.demo.SerialPort2Activity"
            android:label="SerialPort2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qs.demo.SerialPort4Activity"
            android:label="SerialPort4"
            android:screenOrientation="portrait" />
    </application>

</manifest>